        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">

        <activity android:name="fr.delaporte.laboratoireGSB.ui.modules.login.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="fr.delaporte.laboratoireGSB.ui.modules.activity.ActivitesActivity" />
        <activity android:name="fr.delaporte.laboratoireGSB.ui.modules.activity.ActivityActivity" />
        <activity android:name="fr.delaporte.laboratoireGSB.ui.modules.activity.ActivityAddActivity" android:label="Ajouter une activité" />

        <activity android:name="fr.delaporte.laboratoireGSB.ui.modules.visit.VisitActivity" />
