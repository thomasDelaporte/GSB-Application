        <activity android:name="fr.delaporte.laboratoireGSB.ui.modules.visit.VisitAddActivity" android:label="Ajouter une visite" />

        <activity android:name="fr.delaporte.laboratoireGSB.ui.modules.drug.DrugsActivity" android:label="Médicaments en stock" />
        <activity android:name="fr.delaporte.laboratoireGSB.ui.modules.drug.DrugAddActivity" android:label="Ajouter un médicament" />

        <activity android:name="fr.delaporte.laboratoireGSB.ui.modules.personnel.PersonnelsActivity" android:label="Liste du personnel" />
        <activity android:name="fr.delaporte.laboratoireGSB.ui.modules.personnel.PersonnelActivity" />
        <activity android:name="fr.delaporte.laboratoireGSB.ui.modules.personnel.PersonnelAddActivity" android:label="Ajouter un personnel" />

        <activity android:name="fr.delaporte.laboratoireGSB.ui.modules.practitioner.PractitionersActivity" android:label="Liste des practiciens" />
        <activity android:name="fr.delaporte.laboratoireGSB.ui.modules.practitioner.PractitionerActivity" />
        <activity android:name="fr.delaporte.laboratoireGSB.ui.modules.practitioner.PractitionerAddActivity" android:label="Ajouter un practicien" />

