<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:weightSum="2"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:layout_width="match_parent">

        <TextView
            android:layout_margin="16dp"
            android:id="@+id/txt_visitMedicamentsNoData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/aucun_medicaments" />

        <ListView
            android:id="@+id/lv_Medicaments"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:layout_gravity="top"
            tools:ignore="Suspicious0dp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_marginTop="24dp"
        android:paddingHorizontal="10dp"
        android:paddingBottom="10dp"
        android:layout_weight="0.5"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:weightSum="2"
        android:layout_gravity="bottom"
        android:layout_height="0dp">

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btn_medicamentDialog"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:background="@color/colorSecondary"
            android:textColor="@color/colorOnPrimary"
            android:layout_weight="1"
            android:padding="12dp"
            android:text="@string/ajouter_un_medicament" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btn_confirmVisitUpdate"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:background="@color/colorPrimary"
            android:textColor="@color/colorOnPrimary"
            android:layout_weight="1"
            android:padding="12dp"
            android:text="Confirmer" />

    </LinearLayout>
</LinearLayout>
